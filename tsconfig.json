{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/layout/*": ["layout/*"],
      "@/pages/*": ["pages/*"],
      "@/store/*": ["store/*"],
      "@/types/*": ["types/*"],
      "@/lib/*": ["lib/*"],
      "@/constants/*": ["lib/constants/*"],
      "@/models/*": ["lib/models/*"],
      "@/http/*": ["lib/http/*"],
      "@/styles/*": ["styles/*"],
      "@/UI/*": ["UI/*"],
      "@/icon/*": ["assets/Icon/*"],
      "@/image/*": ["assets/Image/*"],
      "@/hooks/*": ["hooks/*"],
      "@/fetch/*": ["lib/fetch/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/store/root-reducer.js"],
  "exclude": ["node_modules"]
}
